    "version": "0.2.0",
    "configurations": [
        {
            "name": "GazePrediction Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "src/atari_cr/atari_head.py",
            "console": "integratedTerminal",
        },
        {
            "name": "DQN CR Sugarl Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "src/atari_cr/agents/dqn_atari_cr/main.py",
            "console": "integratedTerminal",
            "pythonArgs": [
                // Not having this displays a warning because frozen modules bad
                "-Xfrozen_modules=off"
            ],
            "args": [
                "--env", "boxing",
                "--env-num", "1",
                "--seed", "0",
                "--exp-name", "dqn_cr_debug",
                "--fov-size", "20",
                "--clip-reward",
                "--capture-video",
                "--total-timesteps", "10000",
                "--buffer-size", "100000",
                "--learning-start", "1000",
                "--pvm-stack", "6",
                "--pause-cost", "0.01",
                "--successive-pause-limit", "20",
                "--sensory-action-mode", "absolute"
            ],
            "justMyCode": false
        },
        {
            "name": "Basic Sugarl Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "src/atari_cr/agents/dqn_atari_cr/main.py",
            "console": "integratedTerminal",
            "args": [
                "--env", "boxing",
                "--seed", "1",
                "--exp-name", "dqn_cr_debug",
                "--fov-size", "20",
                "--clip-reward",
                "--capture-video",
                "--total-timesteps", "10000",
                "--buffer-size", "100000",
                "--learning-start", "1000",
                "--pause-cost", "0.1",
            ],
            "justMyCode": false
        },
    ]
}